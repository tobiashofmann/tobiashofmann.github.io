<mvc:View
	controllerName="de.itsfullofstars.bingo.bingo.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">

	<Page
		title="{i18n>appTitle}">
		<headerContent>
			<Button id="doReloadData" icon="sap-icon://refresh" type="Transparent" press="doReloadBuzzowrds" />
			<Button id="legalMenu" icon="sap-icon://compare" tooltip="{i1n>legalInfo}" type="Transparent" press="onLegalInfoPress">
				<layoutData>
					<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
				</layoutData>
			</Button>
		</headerContent>

		<content>
			<VBox class="responsiveMargin">

				<grid:CSSGrid
					id="bingoCardGrid"
					items="{bingo>/}"
					class="responsiveMargin"				
					gridTemplateColumns="{mainView>/columnLayout}"
					gridGap="0.3em"
					>
					<GenericTile class="" 
						width="auto"
						sizeBehavior="Responsive"
						press="onTilePress">
						<TileContent class="sapUiNoMargin noMinWidth">
							<Text
								text="{bingo>value}"
								class="sapUiNoMargin"
								wrapping="true"
								wrappingType="Hyphenated"
								 />
						</TileContent>
					</GenericTile>
				</grid:CSSGrid>

			</VBox>
		</content>

		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Text text="{i18n>eventName}" />
			</OverflowToolbar>
		</footer>

	</Page>

</mvc:View>