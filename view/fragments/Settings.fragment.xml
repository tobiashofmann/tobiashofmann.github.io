<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	>
	<Dialog
		id="settingsDialog"
		title="{i18n>settings}"
		type="Message">
		<content>
			<List id="idSettingsList">
				<InputListItem label="{i18n>rows}" >
					<StepInput
						value="{mainView>/rows}"
						displayValuePrecision="{displayValuePrecision}"
						min="3"
						max="{mainView>/maxRows}"
						width="10rem"
						largerStep="1"/>
				</InputListItem>

				<InputListItem label="{i18n>columns}">
					<StepInput
						value="{mainView>/columns}"
						displayValuePrecision="{displayValuePrecision}"
						min="3"
						max="{mainView>/maxColumns}"
						width="10rem"
						largerStep="1"/>
				</InputListItem>		
			</List>
		</content>
		<beginButton>
			<Button 
				type="Emphasized"
				text="OK"
				press="onSettingsClose"
				>
			</Button>
		</beginButton>
	</Dialog>

</core:FragmentDefinition>